{
  "data_dir": "/opt/consul/data",
  "bootstrap_expect": 3,
  "server": true,
  "bind_addr": "{{ ansible_default_ipv4.address }}",
  "retry_join": [
    {% for ip in nomad_master_server_ips %}
    "{{ ip }}"{% if not loop.last %},{% end if %}
    {% endfor %}
  ],
  "recursors": [
    "8.8.8.8",
    "8.8.4.4"
  ],
  "dns_config": {
    "enable_truncate": true
  },
  "atlas_infrastructure": "bkendall/nomad",
  "atlas_join": true,
  "atlas_token": "{{ vault_atlas_token }}"
}
